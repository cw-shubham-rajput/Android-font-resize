<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shubh.font_resize.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:max="20"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/heading" />

            <ImageView
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mustang_ext_360_my16_middle_road_0069"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/body"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/body" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/animate"
            android:layout_marginBottom="46dp"
            android:src="@drawable/text"
            android:scaleType="fitCenter"
            android:background="@drawable/round_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/one"
            android:src="@drawable/text_one"
            android:scaleType="fitXY"
            android:background="@drawable/round_button"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_alignTop="@+id/animate"
            android:layout_toRightOf="@+id/animate"
            android:layout_toEndOf="@+id/animate" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/two"
            android:src="@drawable/text_two"
            android:scaleType="fitXY"
            android:background="@drawable/round_button"
            android:layout_alignTop="@+id/one"
            android:layout_toRightOf="@+id/one"
            android:layout_toEndOf="@+id/one" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/three"
            android:src="@drawable/text_three"
            android:scaleType="fitXY"
            android:background="@drawable/round_button"
            android:layout_alignTop="@+id/two"
            android:layout_toRightOf="@+id/two"
            android:layout_toEndOf="@+id/two" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/four"
            android:src="@drawable/text_four"
            android:scaleType="fitXY"
            android:background="@drawable/round_button"
            android:layout_alignTop="@+id/three"
            android:layout_toRightOf="@+id/three"
            android:layout_toEndOf="@+id/three" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/theme"
            android:src="@drawable/darkmode"
            android:scaleType="fitXY"
            android:background="@drawable/round_button"/>

    </LinearLayout>

</RelativeLayout>
