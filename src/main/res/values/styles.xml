<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- White theme -->
    <style name="WhiteTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#B0E0E6</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#B0E0E6</item>
        <item name="android:color">#B0E0E6</item>
        <item name="android:colorBackground">#B0E0E6</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Black theme -->
    <style name="BlackTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#B0E0E6</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#000000</item>
        <item name="android:color">#B0E0E6</item>
        <item name="android:colorBackground">#B0E0E6</item>
        <item name="android:textColor">#B0E0E6</item>
    </style>

</resources>
